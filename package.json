{
  "name": "rag-system-nodejs",
  "version": "1.0.0",
  "description": "Sistema RAG usando Node.js e Hono.js",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx server.ts",
    "dev": "tsx watch server.ts",
    "build:azure": "tsc && npm run copy:azure",
    "copy:azure": "rm -rf azure/src && cp -r dist/src azure/",
    "azure:deploy": "cd azure && func azure functionapp publish <SEU_APP_NAME>",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint '**/*.ts' --ignore-pattern 'dist/**' --ignore-pattern 'azure/**'",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "prepare": "husky",
    "commit": "cz",
    "suggest": "node scripts/suggest-commit.js",
    "test:simple": "./test-simple.sh",
    "test:load": "./test-load.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:k6:basic": "k6 run k6-tests/basic-test.js",
    "test:k6:load": "k6 run k6-tests/load-test.js",
    "test:k6:stress": "k6 run k6-tests/stress-test.js",
    "test:k6:spike": "k6 run k6-tests/spike-test.js",
    "test:k6:full": "k6 run k6-tests/full-test.js"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./cz-adapter.cjs"
    }
  },
  "keywords": [
    "rag",
    "hono",
    "nodejs",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@vitest/ui": "^4.0.15",
    "@xenova/transformers": "^2.17.2",
    "busboy": "^1.6.0",
    "canvas": "^3.2.0",
    "dotenv": "^17.2.3",
    "fast-cosine-similarity": "^1.2.2",
    "file-type": "^19.6.0",
    "heap-js": "^2.7.1",
    "hono": "^4.10.7",
    "inversify": "^7.10.6",
    "ioredis": "^5.8.2",
    "mammoth": "^1.11.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "pdf2pic": "^3.2.0",
    "pdfjs-dist": "^5.4.449",
    "pino": "^10.1.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "tesseract.js": "^6.0.1",
    "undici": "^6.22.0",
    "vitest": "^4.0.15",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@types/busboy": "^1.5.4",
    "@types/node": "^24.10.1",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
